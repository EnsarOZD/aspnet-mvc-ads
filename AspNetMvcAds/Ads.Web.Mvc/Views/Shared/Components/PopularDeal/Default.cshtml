@model PopularDealViewModel


<section class="popular-deals section bg-gray">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2>Trending Adds</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quas, magnam.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- offer 01 -->
            <div class="col-lg-12">
                <div class="trending-ads-slide">
                    @foreach (var item in Model.AdvertImageEntities)
                    {
                        var advert = Model.AdvertEntities.FirstOrDefault(a => a.Id == item.AdvertId);

                        if (advert != null)
                        {
                            var categoryAdvert = Model.CategoryAdvertEntities.FirstOrDefault(ca => ca.AdvertId == advert.Id);
                            if (categoryAdvert != null)
                            {
                                var category = Model.CategoryEntities.FirstOrDefault(c => c.Id == categoryAdvert.CategoryId);
                                if (category != null)
                                {

                                    <div class="col-sm-12 col-lg-4">
                                        <!-- product card -->
                                        <div class="product-item bg-light">
                                            <div class="card">
                                                <div class="thumb-content">
                                                    <!-- <div class="price">$200</div> -->

                                                    <a asp-controller="Advert" asp-action="Detail" asp-route-id="@item.Advert.Id">
                                                        <img class="card-img-top img-fluid" src="@item.ImagePath" alt="Card image cap">
                                                    </a>

                                                    <div class="card-body">
                                                        <h4 class="card-title"><a asp-controller="Advert" asp-action="Detail" asp-route-id="@item.Advert.Id">@item.Advert.Title</a></h4>
                                                        <ul class="list-inline product-meta">
                                                            
                                                            <li class="list-inline-item">
                                                                <a asp-controller="Category" asp-action="Index" asp-route-id="@category.Id"><i class="fa fa-folder-open-o"></i>@category.Name</a>
                                                            </li>

                                                            <li class="list-inline-item">
                                                                <a ><i class="fa fa-calendar"></i>@item.CreatedAt.ToString("MM/dd/yyyy")</a>
                                                            </li>
                                                        </ul>
                                                        <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Explicabo, aliquam!</p>
                                                        <div class="product-ratings">
                                                            <ul class="list-inline">
                                                                @for (int i = 0; i < item.Advert.StarCount; i++)
                                                                {
                                                                    <li class="list-inline-item selected"><i class="fa fa-star"></i></li>

                                                                }
                                                                @for (int i = 0; i < (5 - item.Advert.StarCount); i++)
                                                                {
                                                                    <li class="list-inline-item"><i class="fa fa-star"></i></li>

                                                                }

                                                            </ul>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>