@model RegisterViewModel
@{
    ViewData["Title"] = "User Register";
}
@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}



<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border border">
                    <h3 class="bg-gray p-4">Register Now</h3>
                    <form asp-action="Register" asp-controller="Auth" method="post">
                        <fieldset class="p-4">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" type="email" placeholder="Email*" class="border p-3 w-100 my-2" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input asp-for="Password" type="password" placeholder="Password*" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordVerify"></label>
                                <input asp-for="PasswordVerify" type="password" placeholder="Confirm Password*" class="border p-3 w-100 my-2" />
                                <span asp-validation-for="PasswordVerify" class="text-danger"></span>
                            </div>
                            <button type="submit" class="d-block py-3 px-4 bg-primary text-white border-0 rounded font-weight-bold">Register Now</button>
                        </fieldset>
                    </form>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.Error))
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                @if (!string.IsNullOrEmpty(ViewBag.Warning))
                {
                    <div class="alert alert-warning">@ViewBag.Warning</div>
                }
            </div>
        </div>
    </div>
</section>
