@{
    ViewData["Title"] = "Forgot Password";
}


<section class="login py-5 border-top-1">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8 align-item-center">
                <div class="border">
                    <h3 class="bg-gray p-4">Forgot Password</h3>
                    <form action="#">
                        <fieldset class="p-4">
                            <input type="text" placeholder="Username" class="border p-3 w-100 my-2">
                            <button type="submit" class="d-block py-3 px-5 bg-primary text-white border-0 rounded font-weight-bold mt-3">Send E-mail</button>
                            <a class="mt-3 d-block  text-primary" href="/Auth/Login">Back to Login</a>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>