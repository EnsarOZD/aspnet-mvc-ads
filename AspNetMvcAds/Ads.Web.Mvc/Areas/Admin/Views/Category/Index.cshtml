@model List<Ads.Web.Mvc.Areas.Admin.Models.AdminCategoryViewModel>


@{
    ViewData["Title"] = "Kategori Listesi";
}

<div class="container">
    <h2>Category Index</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create A New Category</a>
    </p>
    <table class="table">
        <tr>
            <th>Name</th>
            <th> Description</th>
            <th> CreatedAt</th>
	        <th>UpdatedAt</th>
	       
        </tr>
        
        @foreach (var category in Model)
        {
            <tr>
				<td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.CreatedAt</td>
                <td>@category.UpdatedAt</td>
	            <td>

		            <form asp-controller="Category" asp-area="Admin" asp-action="Delete" method="post">
			            <input type="hidden" name="id" value="@category.Id"/>
			            <button type="submit" class="d-block btn alert-danger btn-sm font-weight-bold  border-0 rounded" onclick="return confirm('Are you sure you want to delete this Category?');">Delete Category</button>
		            </form>
	            </td>
	            <td>
		            <a asp-action="Edit" asp-area="Admin" asp-route-id="@category.Id" asp-controller="Category" class="d-block btn alert-info btn-sm font-weight-bold  border-0 rounded">Edit Category</a>

	            </td>
            </tr>
        }
    </table>
</div>
