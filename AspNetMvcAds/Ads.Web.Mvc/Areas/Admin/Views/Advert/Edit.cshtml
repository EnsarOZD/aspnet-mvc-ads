@model Ads.Web.Mvc.Areas.Admin.Models.AdvertViewModel
@{
	ViewData["Title"] = "Edit Advert";
}

<h1>Edit Advert</h1>

<form asp-action="Edit" asp-controller="Advert" method="post" enctype="multipart/form-data">
	@Html.AntiForgeryToken()

	<input type="hidden" asp-for="Id" />

	<div class="form-group">
		<label asp-for="Title"></label>
		<input asp-for="Title" class="form-control" />
		<span asp-validation-for="Title" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="AdvertClickCount"></label>
		<input asp-for="AdvertClickCount" class="form-control" />
		<span asp-validation-for="AdvertClickCount" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="UploadedImage">Current Image</label>
		@if (Model.ImagePath != null)
		{
			<img src="@Model.ImagePath" alt="Current Image" width="150"/><br/>

		}
		<label>New Image</label>
		<input type="file" asp-for="UploadedImage" class="form-control"/>
		<span asp-validation-for="UploadedImage" class="text-danger"></span>
	</div>
	
	

	<button type="submit" class="btn btn-primary">Update</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>


@section Scripts {
	@Html.ValidationSummary(true, "", new { @class = "text-danger" })
	@Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
}