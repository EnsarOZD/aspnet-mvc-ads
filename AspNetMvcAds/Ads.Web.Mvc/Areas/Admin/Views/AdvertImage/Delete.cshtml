@model Ads.Data.Entities.AdvertImageEntity

<h2>Delete Confirmation</h2>
<p>Are you sure you want to delete the following item?</p>

<div>
    <h4>Advert Image</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Image Path
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImagePath" alt="Resim" width="300" />
        </dd>
        
    </dl>

    <form asp-action="Delete" asp-controller="AdvertImage" asp-area="Admin" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this image?')";>Delete</button>
    </form>
</div>

<div>
    <a asp-action="Index" asp-controller="AdvertImage" asp-area="Admin">Back to List</a>
</div>
