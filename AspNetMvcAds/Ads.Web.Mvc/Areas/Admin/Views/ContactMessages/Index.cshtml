@model List<Ads.Web.Mvc.Areas.Admin.Models.ContactMessagesViewModel>
@{
	var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
	<div class="alert alert-success">@successMessage</div>
}
<div class="container">
	<h2>Users</h2>

	<table class="table">
		<thead>
			<tr>
				<th>ContactId</th>
				<th>Name</th>
				<th>Email</th>
				<th>Context</th>
				<th>Category</th>
				<th>Create Date</th>
				<th>Status</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var messages in Model)
			{
				<tr>
					<td>@messages.ContactId</td>
					<td>@messages.Name</td>
					<td>@messages.Email</td>
					<td>@messages.Context</td>
					<td>@messages.Category</td>
					<td>@messages.DateTime</td>
					<td>@messages.Status</td>

					<td>
						<form asp-controller="ContactMessages" asp-area="Admin" asp-action="Delete" method="post">
							<input type="hidden" name="id" value="@messages.ContactId" />
							<button type="submit" class="d-block btn alert-danger btn-sm font-weight-bold  border-0 rounded" onclick="return confirm('Are you sure you want to delete this User?');">Delete User</button>
						</form>
					</td>

				</tr>
			}
		</tbody>
	</table>
</div>