@model List<Ads.Web.Mvc.Areas.Admin.Models.AdminUserViewModel>
@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}
<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Address</th>
            <th>EmailConfirm</th>
            <th>CreatedAt</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Roles</td>
                <td>@user.Address</td>
                <td>@user.IsEmailConfirmed</td>
                <td>@user.CreatedAt.ToLocalTime().</td>
                <td>
                    <form asp-controller="User" asp-area="Admin" asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@user.Id" />
                        <button type="submit" class="d-block btn alert-danger btn-sm font-weight-bold  border-0 rounded" onclick="return confirm('Are you sure you want to delete this User?');">Delete User</button>
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-area="Admin" asp-route-id="@user.Id" asp-controller="User" class="d-block btn alert-info btn-sm font-weight-bold  border-0 rounded">Edit User</a>
                       
                   
                </td>
            </tr>
        }
    </tbody>
</table>